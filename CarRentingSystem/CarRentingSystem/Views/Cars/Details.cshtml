@model CarRentingSystem.Services.Cars.Models.CarDetailsServiceModel

<div style="font-family: Arial, sans-serif; max-width: 600px; margin: 0 auto;">
    <h1 style="text-align: center; margin-top: 20px;">Car Details</h1>

    <div style="background-color: #f5f5f5; padding: 10px; margin-top: 20px;">
        <h3>Car Information</h3>
        <p><strong>Brand:</strong> @Model.Brand</p>
        <p><strong>Model:</strong> @Model.Model</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Category:</strong> @Model.CategoryName</p>
    </div>

    <div style="background-color: #f5f5f5; padding: 10px; margin-top: 20px;">
        <h3>Dealer Information</h3>
        <p><strong>Name:</strong> @Model.DealerName</p>
    </div>

    <div style="background-color: #f5f5f5; padding: 10px; margin-top: 20px;">
        <h3>User Information</h3>
        <p><strong>User ID:</strong> @Model.UserId</p>
    </div>

    <div style="text-align: center; margin-top: 20px;">
        <a href="@Url.Action("Index", "Home")" style="display: inline-block; padding: 10px 20px; background-color: #007bff; color: #fff; text-decoration: none;">Back to Home</a>
    </div>
</div>
